<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <android.support.v7.widget.CardView
            android:id="@+id/forecastCard"
            style="@style/ForecastCardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <GridLayout
                    android:id="@+id/headerCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="start"
                        android:layout_row="0"
                        android:elevation="6dp"
                        android:text="THU 18,Dec"
                        android:textSize="@dimen/main_text_size" />

                    <TextView
                        android:id="@+id/city_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="end"
                        android:layout_row="0"
                        android:elevation="6dp"
                        android:textSize="@dimen/main_text_size" />
                </GridLayout>

                <TextView
                    android:id="@+id/details_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/headerCard"
                    android:layout_gravity="end"
                    android:elevation="5dp"
                    android:gravity="end"
                    android:textSize="@dimen/main_text_size" />

                <LinearLayout
                    android:id="@+id/weatherCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/details_field"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/weather_icon_day0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="26dp"
                        android:layout_marginStart="26dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/background"
                        android:contentDescription="@string/weather_icon"
                        android:elevation="10dp"
                        android:padding="8dp"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/few_clouds_d" />

                    <TextView
                        android:id="@+id/current_temperature_field"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="26dp"
                        android:layout_marginRight="26dp"
                        android:layout_weight="2"
                        android:elevation="6dp"
                        android:gravity="end"
                        android:textSize="48sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/forecast_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/weatherCard"
                    android:textAlignment="center"
                    android:elevation="6dp"
                    android:textSize="@dimen/main_text_size" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/city_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/precipitation_meter"
            android:layout_below="@id/forecastCard"
            android:contentDescription="@string/image_city"
            android:scaleType="fitXY"
            android:src="@mipmap/city8" />


        <LinearLayout
            android:id="@+id/action_wash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/precipitation_meter"
            android:layout_below="@+id/forecastCard"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/car_image"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:adjustViewBounds="true"
                android:contentDescription="@string/white_car_image"
                android:scaleType="fitCenter"
                android:src="@mipmap/car_new_shadow1" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/precipitation_meter"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_above="@+id/progressLabel"
            android:layout_marginTop="6dp" />

        <LinearLayout
            android:id="@+id/progressLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rwForecast">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/dry"
                android:textAllCaps="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/normal"
                android:textAllCaps="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/wet"
                android:textAllCaps="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/small_text_size" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rwForecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/updated_field"
            android:background="@drawable/transparent_bg" />

        <TextView
            android:id="@+id/updated_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/small_text_size" />
    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>
