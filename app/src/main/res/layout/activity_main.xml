<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/toolbar" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <android.support.v7.widget.CardView
                android:id="@+id/forecastCard"
                style="@style/ForecastCardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!--<View-->
                    <!--android:id="@+id/headerBg"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="150dp"-->
                    <!--android:background="@drawable/mb_bg_fb_08"-->
                    <!--/>-->

                    <RelativeLayout
                        android:id="@+id/cardContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorPrimaryDark"
                        android:padding="8dp">

                        <LinearLayout
                            android:id="@+id/weatherCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/weather_icon_day0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:adjustViewBounds="true"
                                android:contentDescription="@string/weather_icon"
                                android:scaleType="fitCenter"
                                android:src="@mipmap/few_clouds_d" />

                            <TextView
                                android:id="@+id/max_t_field"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="-10 C"
                                android:textColor="@color/textColor"
                                android:textSize="40sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_margin="16dp"
                                android:background="@color/textColorLight" />

                            <TextView
                                android:id="@+id/min_t_field"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="end"
                                android:text="-12 C"
                                android:textColor="@color/textColor"
                                android:textSize="40sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/details_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/weatherCard"
                            android:layout_gravity="end"
                            android:gravity="center"
                            android:text="rain"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/main_text_size" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/details_field"

                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/humidity_field"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="70%"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/main_text_size" />

                            <TextView
                                android:id="@+id/barometer_field"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="1008 mPa"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/main_text_size" />

                            <TextView
                                android:id="@+id/speed_wind_field"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="5 m/s"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/main_text_size" />
                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/forecast_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardContent"
                        android:padding="8dp"
                        android:text="@string/can_wash"
                        android:textAlignment="center"
                        android:textSize="@dimen/main_text_size" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/city_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/precipitation_meter"
                android:layout_below="@id/forecastCard"
                android:contentDescription="@string/image_city"
                android:scaleType="fitXY"
                android:src="@mipmap/city8" />


            <LinearLayout
                android:id="@+id/action_wash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/precipitation_meter"
                android:layout_below="@+id/forecastCard"
                android:gravity="bottom"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/car_image"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/white_car_image"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/car10" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/precipitation_meter"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_above="@+id/progressLabel"
                android:layout_marginTop="6dp" />

            <LinearLayout
                android:id="@+id/progressLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rwForecast">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/dry"
                    android:textAllCaps="true"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/normal"
                    android:textAllCaps="true"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/wet"
                    android:textAllCaps="true"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/small_text_size" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rwForecast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/updated_field"
                android:background="@drawable/transparent_bg" />

            <TextView
                android:id="@+id/updated_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/small_text_size" />
        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>

