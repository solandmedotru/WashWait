<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin_land"
    android:layout_marginLeft="@dimen/activity_vertical_margin_land"
    android:layout_marginRight="@dimen/activity_vertical_margin_land"
    android:layout_marginTop="@dimen/activity_vertical_margin_land"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_marginEnd="@dimen/activity_vertical_margin_land"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/activity_vertical_margin_land">

            <TextView
                android:id="@+id/city_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin_land"
                android:textColor="@color/textColor"
                android:textSize="@dimen/main_text_size_land"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:id="@+id/forecastCard"
                style="@style/ForecastCardViewStyleLand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/city_field">

                <TextView
                    android:id="@+id/forecast_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="@dimen/main_text_size_land" />
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/weatherCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/forecastCard"
                android:layout_gravity="top"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/padding">

                <TextView
                    android:id="@+id/details_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/main_text_size_land" />

                <TextView
                    android:id="@+id/max_t_field"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_thermometer"
                    android:drawableStart="@drawable/ic_thermometer"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/main_text_size_land" />

                <ImageView
                    android:id="@+id/weather_icon_day0"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/icon_size_land"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:contentDescription="@string/weather_icon"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/few_clouds_d" />

            </LinearLayout>


            <ImageView
                android:id="@+id/city_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/precipitation_meter"
                android:layout_below="@id/forecastCard"
                android:contentDescription="@string/image_city"
                android:scaleType="fitXY"
                android:src="@mipmap/city8" />


            <LinearLayout
                android:id="@+id/action_wash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/precipitation_meter"
                android:layout_below="@+id/weatherCard"
                android:gravity="bottom"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/car_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:contentDescription="@string/white_car_image"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/car1" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/precipitation_meter"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_above="@+id/progressLabel"
                android:layout_marginTop="6dp" />

            <LinearLayout
                android:id="@+id/progressLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/updated_field">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/dry"
                    android:textAllCaps="true"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/normal"
                    android:textAllCaps="true"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/wet"
                    android:textAllCaps="true"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/small_text_size" />
            </LinearLayout>


            <TextView
                android:id="@+id/updated_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/small_text_size" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rwForecast"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:background="@drawable/transparent_bg" />
    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>
